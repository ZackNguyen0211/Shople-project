{
  "name": "shoople-mono",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/web"
  ],
  "scripts": {
    "build": "npm run build -w @shoople/web",
    "dev": "npm run dev -w @shoople/web",
    "prisma:generate": "prisma generate --schema ./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema ./prisma/schema.prisma",
    "prisma:deploy": "prisma migrate deploy --schema ./prisma/schema.prisma",
    "prisma:seed": "node ./prisma/seed.mjs",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs,.mjs",
    "vercel-build": "npm run prisma:deploy && npm run build -w @shoople/web"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.8",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "prisma": "^5.20.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/bcryptjs": "^2.4.6"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "prisma": {
    "seed": "node ./prisma/seed.mjs"
  }
}
