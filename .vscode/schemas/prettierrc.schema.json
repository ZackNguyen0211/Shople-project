{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "prettierrc.local.schema.json",
  "title": "Prettier Configuration (Local Schema)",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "semi": { "type": "boolean" },
    "singleQuote": { "type": "boolean" },
    "trailingComma": {
      "type": "string",
      "enum": ["none", "es5", "all"]
    },
    "printWidth": { "type": "integer", "minimum": 0 },
    "tabWidth": { "type": "integer", "minimum": 0 },
    "useTabs": { "type": "boolean" },
    "endOfLine": { "type": "string", "enum": ["lf", "crlf", "cr", "auto"] }
  }
}

